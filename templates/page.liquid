{%- assign force_secondary_background = true -%}

<div class="page__content-wrapper">
  <div class="container">
      {%- if page.metafields.global.header_image != blank -%}
        <div class="page__header-image">
            <img src="{{ page.metafields.global.header_image }}" alt="" >       
        </div>
      {%- endif -%}

{%- comment -%}
    <div class="page__header">
      <h1 class="page__title h1">{{ page.title }}</h1>
    </div>
{%- endcomment -%}

    <div class="box box--shrinked">
      <div class="box__content box__content--large-padding rte">
        {{ page.content }}
      </div>

    </div>
  </div>
</div>   
