{%- if section.settings.show_newsletter -%}


  <aside class="newsletter">
    <div class="container">
      <div class="newsletter__inner">
       
        {%- if section.settings.newsletter_image -%}
          <div class="newsletter__image-container {% if section.settings.apply_newsletter_gradient %}newsletter__image-container--softened{% endif %}">
            <img src="{{ section.settings.newsletter_image | img_url: '480x320', crop: 'center' }}" alt="{{ section.settings.newsletter_image.alt | escape }}" class="newsletter__image">
          </div>
        {%- endif -%}

       
        {%- capture newsletter_id -%}shopify-section-{{ section.id }}{%- endcapture -%}
        

     	 
        <!--           <input type="hidden" name="contact[tags]" value="newsletter">-->


        {%- capture newsletter_form -%}
        
         <div>     
           <div class="response" id="subscribe-result" style="display:none"></div>
         </div>
        
        
      <form action="https://podspeakers.us3.list-manage.com/subscribe/post-json?u=ce6bc8b1460fa6d7b2b0cadbb&id=9c01707931&c=?" method="get" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate newsletter__form" target="_blank" novalidate>        
      
        
        <div class="input-group ">
                <input type="email" value="" name="EMAIL" class="required email input-group__field input-group__field--expand form__input" id="mce-EMAIL">
                <button class="input-group__submit button button--secondary" type="submit">                  
                  Sign up                  
                   <i class="fa fa-arrow-right" aria-hidden="true"></i>
                   </button>
		</div>
        
           <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_ce6bc8b1460fa6d7b2b0cadbb_9c01707931" tabindex="-1" value=""></div>
       
                
          </div>
            
      
        {% endcapture %}

        <div class="newsletter__cta">
  
           <span class='newsletter__cta-style'  style="font-size: 16pt; display:none">
            
             Thank you! Please check your mail inbox for a confirmation message from us.
             
          </span >
            	
          <div class="newsletter-head"> 
          {{- section.settings.title | escape -}}
          
            {%- if section.settings.content != blank -%}
              <div class="newsletter__notice">
                {{- section.settings.content -}}
              </div>
            {%- endif -%}
      
        	</div>
        </div>

        {{ newsletter_form }}
      </div>
        
    </div>
  </aside>

{%- endif -%}

{% schema %}
{
  "name": "Newsletter",
  "class": "shopify-section__newsletter",
  "settings": [
    {
      "type": "paragraph",
      "content": "Customers who subscribe will have their email address added to the \"accepts marketing\" [customer list](/admin/customers?query=&accepts_marketing=1)."
    },
    {
      "type": "paragraph",
      "content": "You can sync your customers with a newsletter service by installing their app."
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show newsletter",
      "default": true
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Subscribe to our newsletter:"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Text",
      "default": "<p>A short sentence describing what someone will receive by subscribing</p>"
    },
    {
      "type": "image_picker",
      "id": "newsletter_image",
      "label": "Background image",
      "info": "480 x 320px .jpg recommended"
    },
    {
      "type": "checkbox",
      "id": "apply_newsletter_gradient",
      "label": "Apply a gradient on background image",
      "info": "This option can be useful to reduce the image visual impact and give a softer feel.",
      "default": true
    }
  ]
}
{% endschema %}