{%- assign has_twitter = false -%}

<div class="footer">  
  <img class="footer__img" src="{{ 'footer.png' | asset_url }}" alt="{{ shop.name }}"> 
  <div class="container">
    
      <a class="footer__logo-link" href="{{ routes.root_url }}">
          {%- if section.settings.logo != blank -%}  
            <img class="footer__logo-image"
                 src="{{ section.settings.logo | img_url: '200x' }}"
                 srcset="{{ section.settings.logo | img_url: '200x' }}"
                 alt="{{ section.settings.logo.alt | default: shop.name }}">
          {%- else -%}
            <span class="footer__logo-text">{{ shop.name }}</span>
          {%- endif -%}
        </a>

        <div class="footer__change-lang">
          <a href="#" class="show-change-lang-popap">
              <i class="fa fa-map-marker" aria-hidden="true"></i>
              <span>DENMARK</span>
          </a>
        </div>
      

        
    <div class="footer__content ">
      {%- for block in section.blocks -%}   

        {%- case block.type -%}

          {%- when 'text' -%}
            <div class="footer__block grid__cell 1/3--handheld 1/3--lap 1/4--desk" {{ block.shopify_attributes }}>
              <h2 class="footer__title text--uppercase">{{ block.settings.title | escape }}</h2>

              <div class="footer__text rte">
                {{ block.settings.text }}
              </div>

              {%- capture social_media -%}
                {%- include 'social-media', small_icons: true -%}
              {%- endcapture -%}

              {%- if block.settings.show_social_media and social_media != blank -%}
                {{- social_media -}}
              {%- endif -%}
            </div>

          {%- when 'links' -%}
            <div class="footer__block grid__cell 1/3--handheld 1/3--lap 1/4--desk" {{ block.shopify_attributes }}>
              {%- assign menu = linklists[block.settings.menu_linklist] -%}

              <h2 class="footer__title text--uppercase">{{ menu.title }}</h2>

              {%- if menu.links.size > 0 -%}
                <ul class="footer__links list--unstyled">
                  {%- for link in menu.links -%}
                    <li class="footer__link"><a href="{{ link.url }}" class="link">{{ link.title }}</a></li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>

          {%- when 'contact' -%}
            <div class="footer__block grid__cell 1/2--handheld 1/3--lap 1/4--desk" {{ block.shopify_attributes }}>
              <h2 class="footer__title text--uppercase">{{ block.settings.title | escape }}</h2>
              <p>
                {%- if block.settings.phone_number != blank -%}
                  {{ 'layout.footer.contact_phone_number' | t: phone_number: block.settings.phone_number }}
                {%- endif -%}

                {%- if block.settings.email != blank -%}
                  {%- if block.settings.phone_number != blank -%}
                    <br>
                  {%- endif -%}

                  <a href="mailto:{{ block.settings.email }}" class="link">{{ block.settings.email | escape }}</a>
                {%- endif -%}
              </p>
            </div>

          {%- when 'twitter' -%}
            {%- assign has_twitter = true -%}
            {%- assign twitter_handle = block.settings.twitter_handle | remove_first: '@' -%}
            <div id="twitter-timeline" style="display: none !important"></div>

            <div class="footer__block grid__cell 1/2--handheld 1/3--lap 1/4--desk"
                 {% if twitter_handle != blank %}data-twitter-handle="{{ twitter_handle }}"{% endif %}
                 {{ block.shopify_attributes }}>
              <div class="tweet box box--secondary">
                <div class="box__content box__content--small-padding">
                  <p class="tweet__username">{%- include 'icon' with 'twitter' -%} <a href="https://twitter.com/{{ twitter_handle }}" class="link" target="_blank">@{{ twitter_handle }}</a></p>
                  <div class="tweet__content"></div>
                  <date class="tweet__date text--uppercase"></date>
                </div>
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>

    <div class="footer__copyright">
      <a href="{{ routes.root_url }}" class="link">© 
          {{ section.settings.copyright  }}
       
       
       
       
        <!-- ·{{ 'now' | date: "%Y" }}
        ·{{ shop.name }}
        ·{{ shop.address.street }}
        ·{{ shop.currency }}
        ·{{ shop.address.zip }}
         {{ shop.address.city }}
        ·{{ shop.address.country }}  -->
        </a> 
      <!-- / {{ powered_by_link }} -->


<div class="footer-social-links">
    {%- if section.settings.show_social_media1 -%}
  
    {%- capture social_media -%}
    {%- include 'social-media', small_icons: true -%}
    {%- endcapture -%}
    
    {{- social_media -}}
  
    {%- endif -%}
  </div>

      {%- if section.settings.show_payment_methods -%}
        <ul class="footer__payment-methods list--unstyled">
          {%- for type in shop.enabled_payment_types -%}
            <li class="footer__payment-method">
              {{ type | payment_type_svg_tag }}
            </li>
          {%- endfor -%}
        </ul>
      {%- endif -%}
    </div>
  </div>
</div>


 {%- for block in section.blocks -%}   

        {%- case block.type -%}

          {%- when 'change-lng' -%}

<section class="s-change-lang  section-{{ block.id }}">
   <div class="container">
      <div class="s-change-lang__block">
         <div class="s-change-lang__header">
            <p>
               <i class="fa fa-map-marker" aria-hidden="true"></i>
               {{ block.settings.change_lang_header }}
            </p>
            <a href="#" class="icon-close-link">
               <img class="icon-close" src="{{ 'close.svg' | asset_url }}" alt="{{ shop.name }}">
            </a>
         </div>


         <div class="s-change-lang__body">
            <div class="s-change-lang__body-block">

               <div class="s-change-lang__text">
                  <p class="s-change-lang__title">{{ block.settings.change_lang_title }}</p>
                  <p>{{ block.settings.change_lang_text2 }}</p>                  
               </div>
               <div class="s-change-lang__buttons">
                  <button alt="{{ block.settings.linkEU }}"  class="button-collection">International</button>
                  <button alt="{{ block.settings.linkDK }}"  class="button-collection">Denmark</button>

               </div>
            </div>

         </div>


      </div>
   </div>


</section>
   {%- endcase -%}
      {%- endfor -%}

