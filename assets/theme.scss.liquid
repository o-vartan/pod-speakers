/**
 * COLOR SWATCH AND SIZE SELECTOR
 */

.color-swatch {
  display: inline-block;
  width: 24px;
  height: 24px;
  background-size: contain;
  vertical-align: middle;
  border-radius: 50pt;
}

.color-swatch--white {
  border: 2px solid $border-color;
}

.color-swatch--mini {
  width: 11px;
  height: 11px;
  vertical-align: baseline;
  border-width: 1px;
}

.product__available-colors {
  margin-bottom: -10px;
  display: flex;
