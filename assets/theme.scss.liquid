  margin-top: 30px;
  padding-top: 14px;
  text-align: center;
  overflow: hidden;
  line-height: 26px;
  border-top: 1px solid $border-color;
}

.pagination--minimal {
  margin-top: 0 !important;
  border-top: none;
}

.pagination__next,
.pagination__prev {
  position: absolute;

  svg {
    display: inline-block;
    width: 10px;
    height: 10px;
  }
}

.pagination__next {
  right: 0;

  svg {
    margin-left: 12px;
  }
}

.pagination__prev {
  left: 0;

  svg {
    margin-right: 12px;
  }
}

.pagination__nav {
  visibility: hidden;
}

.pagination__nav {
  display: inline-block;
  letter-spacing: 0;
}

.pagination__nav-item {
  display: inline-block;
  margin: 0 4px;
  width: 26px;
  height: 26px;
  text-align: center;
}

.pagination__nav-link {
  display: block;
}

.pagination__nav-item--active {
  background: $heading-color;
  color: $background;
}

.pagination--minimal .pagination__nav {
  visibility: hidden !important;
}

@include av-mq('handheld-and-up') {
  .pagination:not(.pagination--minimal) {
    padding-top: 20px;
  }

  .pagination__nav {
    visibility: visible;
  }
}

@include av-mq('lap-and-up') {
  .pagination {
    line-height: 38px;
  }

  .pagination__nav-item {
    margin: 0 6px;
    width: 38px;
    height: 38px;
  }
}

@include av-mq('desk') {
  .pagination {
    margin-top: 72px;
  }
