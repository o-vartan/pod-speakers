/**
 * DEFAULT STYLES FOR VERY COMMON ELEMENTS (LINKS, ICON, TABLES...)
 */

a,
.link {
  transition: all 0.25s ease-in-out;
}

.link:hover {
  color: $accent-color;
}

.link--primary {
  color: $accent-color !important;

  &:hover {
    color: darken($accent-color, 15%) !important;
  }
}

// .link--secondary {
//   color: $footer-text-color !important;

//   &:hover {
//     color: $accent-color !important;
//   }
// }

.link--icon svg {
  margin-right: 15px;
  height: 12px;
  width: 12px;
  vertical-align: -1px;
}

.link--effect {
  position: relative;

  &::after {
    position: absolute;
    content: '';
    left: 0;
    bottom: 0;
    width: 100%;
    height: 1px;
    background: currentColor;
    -ms-transform-origin: left center;
    transform-origin: left center;
    -ms-transform: scaleX(0);
    transform: scaleX(0);
    transition: transform 0.2s ease-in-out;
  }

  &:hover::after {
    -ms-transform: scaleX(1);
    transform: scaleX(1);
  }
}

.icon {
  display: inline-block;
  width: 1em;
  height: 1em;
  fill: currentColor;
  vertical-align: middle;
}

.list--unstyled {
  list-style: none;
  padding: 0;
  margin: 0;
}

.text--uppercase {
  color: $light-text-color;
  text-transform: uppercase;
