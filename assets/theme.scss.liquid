  embed,
  object {
    position: absolute;
    top: 0;
    left: 0;
    width: 100% !important;
    height: 100% !important;
  }
}

.table-wrapper {
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.table {
  width: 100%;
  border-collapse: separate;
  color: $heading-color;

  th {
    @extend .text--uppercase;
    padding: 0 5px 4px 5px;
    text-align: left;
  }

  td {
    padding: 12px 5px;
    border-bottom: 1px solid $border-color;
  }

  td:first-child,
  th:first-child {
    padding-left: 0;
  }

  td:last-child,
  th:last-child {
    padding-right: 0;
    text-align: right;
  }
}

