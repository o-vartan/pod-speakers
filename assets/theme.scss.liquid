    left: -15px;
    right: -15px;
  }
}

.plus-button {
  position: relative;
  display: inline-block;
  width: 16px;
  height: 16px;
  padding: 0;
  cursor: pointer;
  background: transparent;
  border: none;
  vertical-align: middle;
  -webkit-appearance: none;

  &::before,
  &::after {
    content: '';
    position: absolute;
    background-color: currentColor;
    transition: transform 0.25s ease-out;
  }

  /* Vertical line */
  &::before {
    top: 0;
    left: 50%;
    width: 2px;
    height: 100%;
    margin-left: -1px;
  }

  /* horizontal line */
  &::after {
    top: 50%;
    left: 0;
    width: 100%;
    height: 2px;
    margin-top: -1px;
  }
}

.plus-button--active {
  &::before {
    -ms-transform: rotate(90deg);
    transform: rotate(90deg);
  }

  &::after {
    -ms-transform: rotate(180deg);
